<UserControl x:Class="Labb_03_version_02_Quiz_with_GUI.View.PlayerView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Labb_03_version_02_Quiz_with_GUI.View"
             DataContext="{Binding PlayerViewModel}"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="6*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="5*"/>
            </Grid.RowDefinitions>

            <StackPanel Orientation="Vertical"
                        Grid.Row="1" 
                        Grid.Column="1"
                        VerticalAlignment="Stretch"
                        >

                <Label FontSize="40"
                   FontWeight="DemiBold"
                   HorizontalAlignment="Center"
                   Content="{Binding CurrentQuestion.Query}"
                   />



                <Label FontSize="20"
                    FontWeight="DemiBold"
                    HorizontalAlignment="Center"
                    Content="{Binding ProgressionString}"
                    />
            </StackPanel>

            <Label Grid.Row="0"
                   Grid.Column="2"
                   FontSize="40"
                   FontWeight="DemiBold"
                   Margin="10"
                   HorizontalAlignment="Right"
                   VerticalAlignment="Center"
                   Content="{Binding SecondsRemainingToAnswer}"
                   />
        </Grid>
        
        
        <!--<Button Grid.Row="1"
        VerticalAlignment="Center"
        HorizontalAlignment="Center"
        Content="{Binding Path=TestData}"
        Margin="10"
        Command="{Binding UpdateButtonCommand}"
        />-->

        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Button x:Name="buttonLeftTop"
                    Content="Svar 1"
                    Grid.Row="0"
                    Grid.Column="0"
                    Margin="15"
                    />
            <Button x:Name="buttonRightTop"
                Content="Svarsalternativ 2"
                Grid.Row="0"
                Grid.Column="1"
                Margin="15"
                />
            <Button x:Name="buttonLeftBottom"
                Content="Svarasdadg 3"
                Grid.Row="1"
                Grid.Column="0"
                Margin="15"
                />
            <Button x:Name="buttonRightBottom"
                Content="Svarsalternativ 4"
                Grid.Row="1"
                Grid.Column="1"
                Margin="15"
                />

        </Grid>
    </Grid>
</UserControl>
