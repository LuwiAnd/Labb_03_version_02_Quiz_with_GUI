<Window x:Class="Labb_03_version_02_Quiz_with_GUI.View.CreateQuestionPackView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Labb_03_version_02_Quiz_with_GUI.View"
        mc:Ignorable="d"
        Title="CreateQuestionPackView" Height="450" Width="400">
        <!--DataContext="CreateQuestionPackViewModel"-->
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="4*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0">
            <Label Content="Name"
           FontWeight="ExtraBold"
           FontSize="15"
           Margin="7"
           />
            <TextBox 
        Width="350" 
        Height="50" 
        HorizontalAlignment="Left" 
        Margin="12, 0, 10, 0"
        Text="{Binding PackName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
    />
        </StackPanel>
        
        <StackPanel Grid.Row="1">
            <Label Content="Difficulty"
                   FontWeight="ExtraBold"
                   FontSize="15"
                   Margin="7"
                   />

            <ComboBox Width="350"
                      Margin="0 0 10 0"
                      ItemsSource="{Binding Difficulties}"
                      SelectedIndex="1"
                      />
        </StackPanel>

        <StackPanel Grid.Row="2">
            <Label Content="Time limit in seconds per question"
                   FontWeight="ExtraBold"
                   FontSize="15"
                   Margin="12"
                   />

            <Slider Width="350"
                    Minimum="1"
                    Maximum="60"
                    TickFrequency="1"
                    IsSnapToTickEnabled="True"
                    Margin="0 0 10 0"
                    Value="{Binding TimeLimitInSeconds, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                    />
            
            <TextBlock Text="{Binding TimeLimitInSeconds}"
               FontWeight="DemiBold"
               FontSize="10"
               HorizontalAlignment="Center"
               Margin="0 10 0 0"
               />
        </StackPanel>

        <StackPanel Grid.Row="3"
            Orientation="Horizontal"
            HorizontalAlignment="Right"
            Margin="20"
            >
            <Button Content="Cancel"
            Height="20"
            Width="50"
            Margin="5"
            Command="{Binding CloseActivePackConfiguration}"
            CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}"
            />
            <Button Content="Save"
            Height="20"
            Width="50"
            Margin="5"
            Command="{Binding SaveActivePackChangesCommand}"
            CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}"
            />
        </StackPanel>
    </Grid>
</Window>
